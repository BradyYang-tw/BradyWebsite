{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        // "module": "es6",
        "module": "esnext", // for react lazy
        "target": "es5",
        "jsx": "react",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true, //確保檔案的大小寫一致
        // 加入以下兩行，避免TS2300: Duplicate identifier
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        // For webpack alias
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
        }
    },
    "include": [
        "./src/**/*"
    ]
}